{
  "name": "@nodecfdi/tooling-configs",
  "version": "1.5.1",
  "description": "Tooling configs for NodeCfdi projects",
  "keywords": [
    "tooling",
    "nodecfdi",
    "lint",
    "formatter"
  ],
  "private": true,
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "is-in-ci || husky",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nodecfdi/eslint-config": "workspace:*",
    "@nodecfdi/prettier-config": "workspace:*",
    "@nodecfdi/tsconfig": "workspace:*",
    "@poppinss/utils": "^6.7.3",
    "eslint": "^8.57.0",
    "eslint-define-config": "^2.1.0",
    "husky": "^9.1.4",
    "is-in-ci": "^1.0.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "prettier"
      ]
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "@nodecfdi/prettier-config",
  "engines": {
    "node": ">=20.6"
  },
  "packageManager": "pnpm@9.7.1"
}
