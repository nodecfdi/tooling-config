{
  "name": "@nodecfdi/tooling-configs",
  "version": "1.0.0",
  "description": "Tooling configs for NodeCfdi projects",
  "keywords": [
    "tooling",
    "nodecfdi",
    "lint",
    "formatter"
  ],
  "private": true,
  "author": "Fernando Isidro <luffynando@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "is-in-ci || husky",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@nodecfdi/eslint-config": "workspace:*",
    "@nodecfdi/prettier-config": "workspace:*",
    "@nodecfdi/tsconfig": "workspace:*",
    "eslint": "^8.57.0",
    "eslint-define-config": "^2.1.0",
    "husky": "^9.0.11",
    "is-in-ci": "^0.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "typescript",
        "prettier"
      ]
    }
  },
  "prettier": "@nodecfdi/prettier-config",
  "engines": {
    "node": ">=20.6"
  }
}
